/* No.003 */
body {
  font-family: sans-serif;
  text-align: center;
}

#canvas-container {
  width: 320px;
  height: 180px;
  margin: 20px auto;
  border: 2px solid #333;
  position: relative;
}

canvas {
  display: block;
  position: absolute;
  top: 0;
  left: 0;
}

#controls {
  margin-top: 10px;
}

#controls input[type="range"] {
  width: 200px;
}
